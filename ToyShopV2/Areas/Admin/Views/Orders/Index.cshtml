@model IEnumerable<Order>


@{
        ViewData["Title"] = "Toys";
}

<h1>Products</h1>

<p>
        <a asp-action="Create">Create New</a>
</p>

<table class="table">
        <thead>
                <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Price</th>
                        <th>Comment</th>
                        <th>OrderDate</th>
                        <th></th>
                </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                                <td>
                                        @item.Name
                                </td>
                                        @item.Email
                                <td>
                                </td>
                                <td>
                                        @item.OrderPrice.ToString("C2")
                                </td>
                                <td>
                                        @item.Comment
                                </td>
                                <td>
                                        @item.OrderDate
                                </td>
                                <td>
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                                </td>
                        </tr>
                }
        </tbody>
</table>

<div class="d-flex w-100 justify-content-center">
        <pagination page-count="@ViewBag.TotalPages"
                    page-target="/admin/toys/@ViewBag.CategorySlug"
                    page-number="@ViewBag.PageNumber"
                    page-range="@ViewBag.PageRange">
        </pagination>
</div>
