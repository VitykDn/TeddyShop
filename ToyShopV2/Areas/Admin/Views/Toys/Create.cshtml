@model ToyShopV2.Models.Toy

@{
    ViewData["Title"] = "Create";
}

<h1>Створити Іграшку</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Назва Іграшки</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label">Розмір</label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label">Колір</label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Ціна</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Зображення</label>
                <input asp-for="ImageUpload" class="form-control" />
                <img id="imgpreview" class="pt-2" />
                <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="SelectedColors" class="control-label">Кольори</label>
                <select asp-for="SelectedColors" asp-items="ViewBag.Colors" class="form-control" id="listColors" multiple></select>
                
            </div>*@

            @* <div class="form-group">
            @Html.LabelFor(model => model.Colors)
            @Html.ListBoxFor(model => model.SelectedColors, Model.Colors, new { @class = "form-control" ,id="listAnswers" })
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />

            </div>
        </form>
    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

