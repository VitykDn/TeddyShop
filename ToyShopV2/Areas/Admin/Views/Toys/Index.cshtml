@model IEnumerable<Toy>


@{
    ViewData["Title"] = "Toys";
}

<h1>Products</h1>

<p>
    <a asp-action="Create">Створити Іграшку</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Зоображення</th>
            <th>Назва</th>
            <th>Ціна</th>
            <th>Розміри</th>
            <th>Кольори</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="/media/toys/@item.Image" width="100" alt="" />
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price.ToString("C2")
                </td>
                <td>
                    @item.Size
                </td>
                <td>
                   @item.Color
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="confirmDeletion">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex w-100 justify-content-center">
    <pagination page-count="@ViewBag.TotalPages"
                page-target="/admin/toys/@ViewBag.CategorySlug"
                page-number="@ViewBag.PageNumber"
                page-range="@ViewBag.PageRange">
    </pagination>
</div>
