@model Order

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">

            <div class="form-group">
                <label asp-for="Name" class="control-label">Ваше Ім'я та Прізвище</label>
                <input asp-for="Name" class="form-control" value="Test" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" value="test@gmail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Ваш номер телефону</label>
                <input asp-for="PhoneNumber" class="form-control" value="12345" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label">Коментар до замовлення</label>
                <textarea asp-for="Comment" class="form-control" value="Test" ></textarea>
               
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                
            </div>
        </form>
    </div>
</div>